<%- include("../PageHeader") %>

<body>
  <!-- Page Preloder -->
  <div id="preloder">
    <div class="loader"></div>
  </div>
  <div class="container-fluid dashboard">
    <div class="row db-header">
      <div class="header-title-img">
        <img src="../img/logo.png" alt="" />
      </div>
      <div class="header-title-btn">
        <div class="header-title-btn__name">Hello, <%=CustomerName%></div>
        <a href="/logout" class="mybtn test__link" style="background-color: #f14e4e;">
          <i class="fa fa-power-off" aria-hidden="true"></i>
          Sign Out
        </a>
      </div>
    </div>
    <div class="row db-content">
      <div class="content-menu">
        <%- include('Partials/MenuSide') %>
      </div>
      <div class="gradient-bg content-main">
        <!-- <div class="main-title">
          <h2>Customer Management</h2>
        </div> -->
        <div class="main-content">
          <div class="show-error">
            <%- include('../ShowMessage')  %>
          </div>
          <table class="table" id="data">
            <thead class="thead-light">
              <tr class="tr-head">
                <th scope="col">STT</th>
                <th scope="col" style="width: 150px;">ID</th>
                <th scope="col">Email</th>
                <th scope="col">Display Name</th>
                <th scope="col">Username</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <% data.forEach((item,index) => { %>
            <tbody>

              <tr class="tr-data">
                <th scope="row" style="width: 50px;">
                  <%= index + 1 %>
                </th>
                <td class="id">
                  <%= item.id %>
                </td>
                <td class="email" style="width: 350px;">
                  <%= item.email %>
                </td>
                <td class="display" style="width: 150px;">
                  <%= item.customer.name !== null ? item.customer.name : 'Chưa Đăng Ký' %>
                </td>
                <td class="username" style="width: 150px;">
                  <%= item.user_name %>
                </td>
                <td class="td-status">
                  <div class="status">
                    <% if (item.StatusID === 0) { %>
                    <i style="color: #f14e4e;" class="fa fa-times-circle"></i>
                    <% }else if(item.StatusID === 1){ %>
                    <i style="color: #096bc7;" class="fa fa-info-circle"></i>
                     <% } else if (item.StatusID === 2) { %>
                    <i class="fa fa-spinner" style="color: #a6ff00e8;" aria-hidden="true"></i>
                    <% } else if (item.StatusID === 3) { %>
                    <i style="color: #7fff00;" class="fa fa-check"></i>
                    <% } else { %>
                    <i style="color: red;" class="fa fa-lock"></i>
                    <% } %>
                  </div>
                </td>
                <td class="td-status">
                  <div class="status">
                    <% if (item.StatusID === 4) { %>
                    <div class="action-btn">
                      <button>
                        <a href="/admin/user/unlock/<%= item.id %> ">
                          <i style="
                            margin: 3px 0px;
                            color: #ff3333;
                            font-size: 2vw;
                          " class="fa fa-lock"></i>
                        </a>
                      </button>
                    </div>
                    <% }else{ %>

                    <div class="action-btn">
                      <div class="action-btn">
                        <button>
                          <a href="/admin/user/lock/<%=item.id%>">
                            <i style="
                            margin: 3px 0px;
                            color: #e2d515;
                            font-size: 2vw;
                          " class="fa fa-unlock"></i>
                          </a>
                        </button>
                      </div>
                      <%}%>            
                  </div>
                </td>
              </tr>
            </tbody>
            <% }) %>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>

<%- include("../PageFooter") %>