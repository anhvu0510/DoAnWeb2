<%- include("PageHeader") %>

<body>
  <!-- Page Preloder -->
  <div id="preloder">
    <div class="loader"></div>
  </div>

  <div class="container-fluid mycontainer">
    <div style="height :100px;" class="row header">
      <div class="header-title">
        <div class="header-title-img">
          <img src="../img/logo.png" alt="" />
        </div>
        <div class="header-title-btn">
          <div class="header-title-btn__name">Hello,Customer</div>
          <a href="/logout" class="mybtn test__link" style="background-color: #f14e4e;">
            <i class="fa fa-power-off" aria-hidden="true"></i>
            Sign Out
          </a>
        </div>
      </div>
    </div>
    <%- include('Partials/menu') %>
    <div class="row form gradient-bg">
      <div class="row form-title">

        <h2> Create Saving Account</h2>
        <%- include('ShowMessage') %>
      </div>
      <div class="row form-main">
        <form method="POST" class="form-group">

          <div class="row">
             <label for="funds">Select funds</label>
          </div>

          <div class="row">
            <select class="form-control" id="funds" name="funds">
              <option>5000</option>
              <option>100000</option>
              <option>5000000</option>
              <option>10000000</option>
              <option>50000000</option>
            </select>
          </div>

          <div style="margin: 10px 0px;" class="row">
            <label style="margin-right: 50px;" for="currency">Select currency</label>
          </div>
          <div style="margin: 10px 0px;" class="row">
            <div style="margin-right: 20px;" class="form-check">
              <input class="form-check-input" type="radio" name="currency" id="currency" value="vnd" checked>
              <label class="form-check-label" for="vnd">
                VND
              </label>
            </div>
           
          </div>
          <div style="margin: 10px 0px;" class="row">
             <div class="form-check">
              <input class="form-check-input" type="radio" name="currency" id="currency" value="usd">
              <label class="form-check-label" for="usd">
                USD
              </label>
            </div>
          </div>


          <div style="margin: 10px 0px;"class="row">
            <label for="currency">Select term</label>
          </div>
          <div style="margin: 10px 0px;" class="row">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="term" id="term" value="6" checked>
              <label class="form-check-label" for="6">
                6 Months
              </label>
            </div>
          </div>
          <div style="margin: 10px 0px;" class="row">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="term" id="term" value="12">
              <label class="form-check-label" for="12">
                12 Months
              </label>
            </div>
          </div>
          <div style="margin: 10px 0px;" class="row">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="term" id="term" value="24">
              <label class="form-check-label" for="24">
                24 Months
              </label>
            </div>
          </div>


          <div class="row btnsub">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>

    </div>
  </div>
</body>
<%- include("PageFooter") %>