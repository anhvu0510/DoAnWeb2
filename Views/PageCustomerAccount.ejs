<%- include("PageHeader") %>

<body>
  <!-- Page Preloder -->
  <div id="preloder">
    <div class="loader"></div>
  </div>

  <div class="container-fluid mycontainer">
    <div class="header">
      <div class="header-title">
        <div class="header-title-img">
          <img src="../../img/logo.png" alt="" />
        </div>
        <div class="header-title-btn">
          <div class="header-title-btn__name">Hello, <%=CustomerName%></div>
          <a href="/logout" class="mybtn test__link" style="background-color: #f14e4e;">
            <i class="fa fa-power-off" aria-hidden="true"></i>
            Sign Out
          </a>
        </div>
      </div>
      <%- include('Partials/menu') %> 
    </div>
    <div class="row form gradient-bg">
      <div class="row form-title">
        <h2>Payment Accounts</h2>
        <%- include('ShowMessage') %>
      </div>
      <div style="width: 70%;" class="row ">
        <table class="table table-bordered">
        <thead class="thead-light">
          <tr class="tr-head">
            <th scope="col"></th>
            <th scope="col">Account number</th>
            <th scope="col">Issue date</th>
            <th scope="col">Balance</th>
            <th scope="col">Currency</th>
            <th scope="col">Transger limit</th>
          </tr>
        </thead>
        <tbody>
          <% paymentaccounts.forEach((account,index) => { %>
          <tr class="tr-data">
            <th name="savingsAccountId" id="savingsAccountId" style="display: none;"><%= account.id %></th>
            <th class="text-center" scope="row"><%= index + 1 %></th>
            <td class="text-center">
              <%= account.account_number %>
            </td>
            <td class="text-center">
              <input disabled="true" type="date" value="<%= account.issue_date %>">
            </td>
            <td class="text-center">
                <%= account.balance.toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,') %>
            </td>
            <td class="text-center">
              <%= account.currency.toUpperCase() %>
            </td>
            <td class="text-center">
              <%= account.transger_limit.toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,') %>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      </div>
    </div>

  </div>
</body>


<%- include("PageFooter") %>



