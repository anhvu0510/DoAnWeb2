                            <td><%= transactions[i].currency %> </td>
                            <td><%= transactions[i].description %> </td>
                            <td><%= transactions[i].date %> </td>
                            <td><%= transactions[i].SourceID %> </td>
                            <td><%= transactions[i].DestinationID %> </td>
