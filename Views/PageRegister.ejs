<%- include ('PageHeader.ejs') %>

<body>
    <div class="container-fluid">
        <div class="row main-content-register bg-success text-center">
            <div class="col-md-4 text-center company__info">
                <span class="company__logo">
                    <h2 class="img">
                        <span class="fa fa-android"></span>
                    </h2>
                </span>
                <div class="bank-title">
                    <h4 class="company__title">Internet Banking</h4>
                </div>
            </div>
            <div class="col-md-8 col-xs-12 col-sm-12 login_form">
                <div class="container-fluid">
                    <div class="row txt">
                        <h2>Register</h2>
                    </div>
                    <% if (typeof errors != 'undefined') { %>
                        <%- include('ShowMessage') %> 
                    <% } %>
                    <div class="row main-content">
                        <form method="POST">
                            <div class="row">
                                <input value="<%= typeof email != 'undefined' ? email:"" %>" type="email" name="email"
                                    id="email" class="form__input" placeholder="Email" />
                            </div>

                            <div class="row">
                                <input type="text" name="username" id="username" class="form__input"
                                    placeholder="Username"
                                    value="<%= typeof username != 'undefined' ? username:"" %>" />
                            </div>
                            <div class="row">
                                <input type="password" name="password" id="password" class="form__input psw_0"
                                    value="<%= typeof password != 'undefined' ? password:"" %>"
                                    placeholder="Password" />
                            </div>
                            <div class="row">
                                <input type="password" name="re_password" id="re_password" class="form__input psw_0"
                                    value="<%= typeof re_password != 'undefined' ? re_password:""%>"
                                    placeholder="Re-Password" />
                            </div>




                            <div class="row btnsub">
                                <input type="submit" value="Submit" class="btn" />
                            </div>
                        </form>
                    </div>
                    <div class="row resgis">
                        <p>Back Login Page<a href="/login"> Login Here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


<%- include ('PageFooter') %>